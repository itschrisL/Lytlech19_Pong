<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="edu.up.cs371.lytlech19.lytlech19_pong.PongMainActivity"
    android:weightSum="1">

    <edu.up.cs371.lytlech19.lytlech19_pong.AnimationSurface
        android:id="@+id/animationSurface"
        android:layout_width="fill_parent"
        android:layout_height="550dp"
        android:layout_weight="1.25"></edu.up.cs371.lytlech19.lytlech19_pong.AnimationSurface>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.88"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="453dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="456dp"
                android:layout_height="40dp"
                android:text="TextView" />

        </LinearLayout>

        <Button
            android:id="@+id/AddBrickButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp"
            android:text="ADD BRICK"
            android:layout_weight="0.24" />

        <Button
            android:id="@+id/newBallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Add Ball"
            android:layout_weight="0.20" />

    </LinearLayout>

</LinearLayout>
    
